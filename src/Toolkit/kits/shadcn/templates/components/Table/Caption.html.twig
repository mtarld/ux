{%- props -%}
{%- set style = html_cva(
    base: 'text-muted-foreground mt-4 text-sm',
    variants: {},
    compoundVariants: []
) -%}

<caption
        class="{{ style.apply({}, attributes.render('class'))|tailwind_merge }}"
        {{ attributes.defaults({}).without('class') }}
>
    {% block content %}{% endblock %}
</caption>
