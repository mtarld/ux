{%- props -%}
{%- set style = html_cva(
    base: 'bg-muted/50 border-t font-medium [&>tr]:last:border-b-0',
    variants: {},
    compoundVariants: []
) -%}

<tfoot
        class="{{ style.apply({}, attributes.render('class'))|tailwind_merge }}"
        {{ attributes.defaults({}).without('class') }}
>
    {% block content %}{% endblock %}
</tfoot>
