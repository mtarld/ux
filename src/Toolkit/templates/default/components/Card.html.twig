{%- props -%}
{%- set style = html_cva(
    base: 'rounded-xl border bg-card text-card-foreground shadow',
    variants: {},
    compoundVariants: []
) -%}

<div
        class="{{ style.apply({}, attributes.render('class'))|tailwind_merge }}"
        {{ attributes.defaults({}).without('class') }}
>
    {% block content %}{% endblock %}
</div>
